global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
   - scheme: http
     static_configs:
     - targets: [{%for target in targets.alertmanagers %}'{{target.addr}}'{% if not loop.last %},{% endif %}{%endfor%}]

rule_files:
  - /etc/prometheus/rules/record_rules.yml
  - /etc/prometheus/rules/alert_rules.yml

scrape_configs:
