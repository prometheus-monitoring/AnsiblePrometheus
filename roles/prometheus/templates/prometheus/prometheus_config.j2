    static_configs:
      - targets: [{%for target in targets.alertmanagers %}'{{target.addr}}'{% if not loop.last %},{% endif %}{%endfor%}]
  - job_name: 'aws'
    static_configs:
    file_sd_configs:
    - files:
      - /etc/prometheus/targets/targets_aws.json
      - /etc/prometheus/targets/targets_manual_aws.json
